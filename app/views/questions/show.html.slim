h3= t('.header')

p= @question.title
p= @question.body

p= link_to t('.delete'), question_path(@question), method: :delete, confirm: 'Delete?'

h4= t('.answers')
ul
  =render @question.answers

h4= t('.your_answer')
= form_with model: [@question, @answer],
        url: question_answers_path(@question),
        local: true do |f|
  = f.label :body
  = f.text_area :body
  = f.submit t('answers.create.submit')