h3= t('.header')

p= @question.title
p= @question.body

- if current_user&.author_of?(@question)
  p= link_to t('.delete'), question_path(@question), method: :delete, confirm: 'Delete?'

h4= t('.answers')
ul
  =render @question.answers

h4= t('.your_answer')
=render 'form_answer', question: @question, answer: @answer