document
    .querySelector('.answer_errors')
    .innerHTML = '<%= render 'shared/errors', resource: @answer %>'

document
    .querySelector('.flash')
    .innerHTML = '<%= render 'shared/flash' %>'

<% unless @answer.errors.present? %>
document.querySelector(".answers li#answer-<%= @answer.id %>").parentNode
    .removeChild(document.querySelector(".answers li#answer-<%= @answer.id %>"));
document.querySelector('.flash .alert').innerText = '<%= flash[:notice] %>'
<% end %>